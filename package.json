{
  "name": "specchecker-int-client",
  "version": "1.0.0",
  "description": "SpecChecker-Int 静态代码分析结果审查工具桌面客户端",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite build --watch & electron .",
    "pack": "vite build && electron-builder --dir",
    "dist": "set ELECTRON_BUILDER_BINARIES_MIRROR=https://npmmirror.com/mirrors/electron-builder-binaries/ && vite build && electron-builder"
  },
  "keywords": [
    "codescan",
    "electron",
    "react",
    "specchecker"
  ],
  "author": "SpecChecker Team",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1",
    "recharts": "^2.7.2",
    "d3": "^7.8.5",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0",
    "@monaco-editor/react": "^4.6.0",
    "jschardet": "^3.0.0",
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/d3": "^7.4.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "build": {
    "appId": "com.specchecker.int",
    "productName": "SpecChecker-Int",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}